# Settings
set dircounts
set drawbox
set hidden true
set icons true
set ifs "\n"
set ignorecase true
set incfilter true
set incsearch true
set info size
set mouse true
set promptfmt " %d%f"
set ratios 1:2:3
set shell bash
set shellopts '-eu'
set sixel

# Bindings
map . set hidden!
map <c-c> clear
map <c-r> reload
map <delete> trash
map <enter> open
map <f-3> search
map <f-5> reload
map B bulkrename
map C edit-config
map D delete
map E unarchive
map N yank-basename
map O &xdg-open $f
map P paste-async
map S shell
map V push :!nvim<space>
map X $$f
map ad mkdir
map af mkfile
map cm chmod
map e $$EDITOR "$f"
map f search
map o open
map p :paste; clear
map P pasteBig
map x cut
map y copy
map z zi
map d
map c

# Jump
map gh cd ~
map ge cd /etc
map gu cd /usr
map gl cd -r .
map gL cd -r %f
map go cd /opt
map gv cd /var
map gm cd /mnt
map gd cd ~/Downloads
map gD cd ~/Documents
map gl cd ~/.local
map gc cd ~/.config
map gs cd /srv
map gP cd /tmp
map gp cd ~/Pictures
map gr cd /

# Imports
source ~/.config/lf/functions
set previewer ~/.config/lf/preview.sh

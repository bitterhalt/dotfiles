$include /etc/inputrc

# Completion settings
set show-all-if-ambiguous on
set completion-ignore-case on
set colored-completion-prefix on
set bell-style none

# vi-mode
set editing-mode vi

# Keybindings (apply to all modes)
TAB: menu-complete
"\e[Z": menu-complete-backward

#  vi-mode specific keybindings
$if mode=vi
  set keymap vi-command
  "\C-l": clear-screen
  "\C-a": beginning-of-line
  "\C-e": end-of-line
  "\C-w": kill-word

  set keymap vi-insert
  "\C-l": clear-screen
  "\C-a": beginning-of-line
  "\C-e": end-of-line
  "\C-w": kill-word
$endif

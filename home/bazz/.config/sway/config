set $bg4     #403E3C
set $fg1     #CECDC3
set $fg2     #6F6E69
set $red     #AF3029
set $cyan    #24837B

set $black   #000000
set $white   #FFFFFF

# CLASS                 BORDER  BACKGR.  TEXT    INDIGATOR CHILD BORDER
client.focused          $bg2    $bg4     $fg1    $cyan     $cyan
client.focused_inactive $bg2    $bg4     $fg2    $bg2      $bg2
client.unfocused        $bg2    $bg3     $fg2    $bg2      $bg2
client.urgent           $bg2    $red    $white  $red      $red
client.placeholder      $black  $black  $white  $black    $black
client.background       $fg1


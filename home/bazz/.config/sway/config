for_window [title="modorganizer.exe"]                     floating enable
for_window [title="pop-upgrade|pacseek"]                  floating enable, resize set width 100 ppt, move position 0 0, resize set width 50 ppt

# Role-based floaters
for_window [window_role="About"]                  floating enable

for_window [app_id="firefox|thunderbird|swappy"] border pixel 2

# Inhibit idle
for_window [app_id="firefox"] inhibit_idle fullscreen
for_window [app_id="mpv"] inhibit_idle fullscreen

#-----------------------------------------------------#
#                      Colors                         #
#-----------------------------------------------------#
set $bg1     #100F0F
set $bg2     #282726
set $bg3     #1c1b1a
set $fg1     #CECDC3
set $fg2     #6F6E69
set $red     #AF3029
set $cyan    #24837B

set $black   #000000
set $white   #ffffff

# Class                 Border  Backgr. Text    Indigator Child border
client.focused          $bg3    $bg3     $fg1    $cyan     $cyan
client.focused_inactive $bg3    $bg3     $fg2    $bg2      $bg2
client.unfocused        $bg1    $bg1     $fg2    $bg2      $bg2
client.urgent           $bg2    $red    $white  $red      $red
client.placeholder      $black  $black  $white  $black    $black
client.background       $fg1

#-----------------------------------------------------#
#                      Auto start                     #
#-----------------------------------------------------#
exec swayidle -w
# Autotiling imitates master and stack layout
exec autotiling -l 2 -sw 0.95
exec swww-daemon
exec foot --server
#exec wl-paste --watch cliphist store
exec wl-paste --type text --watch cliphist store
exec wl-paste --type image --watch cliphist store
exec sleep 6 && transmission-gtk
exec ~/.config/sway/waybar.sh start
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

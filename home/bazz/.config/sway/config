#-----------------------------------------------------#
#                      SWAY SETTINGS                  #
#-----------------------------------------------------#

# Enable if you use Swayfx tweaks
#include ~/.config/sway/swayfx

# Set systemd user environment
include ~/.config/sway/config.d/*

# Vim keys for moving
set $left h
set $down j
set $up k
set $right l

# Xcursor
set $xcursor Bibata-Modern-Classic 24

# Modifier
set $mod Mod4
set $alt Mod1

# Defaults
set $browser firefox
set $gfm thunar
set $locker hyprlock
set $mail thunderbird
set $term footclient
set $tuifm foot -T lf -e lf
set $wallpaper swayimg -g ~/Pictures/wallpaper/

# Dmenu scripts
set $clip ~/.local/bin/menu_scripts/fuzzel_clipboard
set $drun fuzzel
set $editor foot -T nvim -e nvim
set $emojimenu ~/.local/bin/menu_scripts/fuzzel_emoji
set $search ~/.local/bin/menu_scripts/fuzzel_search
set $killer ~/.local/bin/menu_scripts/fuzzel_killer
set $powermenu ~/.local/bin/menu_scripts/fuzzel_power
set $screenshot ~/.local/bin/menu_scripts/fuzzel_screenshot
set $winmenu ~/.local/bin/menu_scripts/fuzzel_sway_window
set $pass ~/.local/bin/menu_scripts/fuzzel_passmenu

# Misc
set $colorpicker ~/.config/sway/scripts/colorpicker
set $updater foot -T pop-upgrade -a popupgrade -e popupgrade
set $pac-installer foot -T pacseek -a pacseek -e pacseek
set $notes foot -a noterm -T Notes -e nvim -p ~/Documents/personal/notes/index.md
set $todo foot -a noterm -T Notes -e nvim -p ~/Documents/personal/notes/todo.md
set $bye loginctl terminate-user "$USER"

# Bar signals
set $sig_1 pkill -SIGRTMIN+1 waybar
set $sig_2 pkill -SIGRTMIN+2 waybar

# Mode
set $mode_apps "APPS: [D]iscord [F]firefox [S]Steam [T]hunderbird [A]ll"
set $mode_info "INFO: [I]info [C]pu [M]em [W]eather"
set $mode_power "POWER: [L]ock [E]xit [R]eboot [S]hutdown [Z]zz"
set $mode_rec "RECORD: [F]ulscreen [A]+audio [R]egion [S]top"
set $mode_shot "SCREENSHOT: [F]ulscreen [R]egion [D]elay"
set $mode_todo "NOTES: [N]ote [T]odo"

# Font
font Cascadia Code 11

# Titlebar
title_align center
titlebar_padding 3
titlebar_border_thickness 1

# Border size
default_border pixel 2

# Gaps
gaps inner 4
gaps outer 0

# Smart gaps/borders
smart_borders off
smart_gaps off

# Xcursor settings
seat seat0 {
hide_cursor 15000
xcursor_theme $xcursor
}

#-------------------------------------------------#
#                      I/O                        #
#-------------------------------------------------#
# Display
output DP-1 {
    mode 1920x1080@60Hz
}

# Keyboard
input type:keyboard {
    xkb_layout fi
    xkb_options grp:sclk_toggle,caps:escape
}

# Mouse
input type:pointer {
    accel_profile "flat"
    pointer_accel 0
}

# Touchpad
input type:touchpad {
    dwt enabled
    tap enabled
    middle_emulation enabled
    natural_scroll enabled
}

#-----------------------------------------------------#
#                      BINDS                          #
#-----------------------------------------------------#

bindsym $mod+F1 exec galculator
bindsym $mod+F10 exec ~/.config/sway/scripts/mic-toggle.sh
bindsym $mod+F11 exec $locker
bindsym $mod+F12 exec ~/.config/sway/scripts/dot-settings.sh
bindsym $mod+F2 exec signal-desktop
bindsym $mod+F3 exec cat ~/.config/sway/config | grep 'bindsym' | grep -v '^\s*#' | sed -e 's/bindsym / /' -e 's/\$mod/Super/g' | fuzzel -d -a top --y 4 -w 50 -l 25 -p "Search: "
bindsym $mod+F4 exec $killer
bindsym $mod+F5 exec $pass
bindsym $mod+F6 mode $mode_shot
bindsym $mod+F7 mode $mode_rec
bindsym $mod+Print exec ~/.local/bin/wl-shot -f
bindsym $mod+Return exec $term
bindsym $mod+ctrl+F8 exec ~/.local/bin/wl-record -k
bindsym $mod+ctrl+a exec ~/.config/sway/scripts/autotiling-toggle.sh
bindsym $mod+ctrl+c exec $clip
bindsym $mod+ctrl+d exec fnottctl dismiss
bindsym $mod+ctrl+e exec $emojimenu
bindsym $mod+ctrl+g smart_gaps toggle
bindsym $mod+ctrl+i exec $pac-installer
bindsym $mod+ctrl+p exec $colorpicker
bindsym $mod+ctrl+s exec ~/.local/bin/menu_scripts/fuzzel_sound
bindsym $mod+ctrl+u exec $updater
bindsym $mod+ctrl+w exec ~/.local/bin/weatherfetch -n
bindsym $mod+d exec $drun
bindsym $mod+e exec $tuifm
bindsym $mod+i  mode $mode_info
bindsym $mod+m exec $mail
bindsym $mod+n mode $mode_todo
bindsym $mod+p      mode $mode_power
bindsym $mod+prior  mode $mode_apps
bindsym $mod+s exec $search
bindsym $mod+shift+F11 exec ~/.config/sway/scripts/idle-daemon.sh --toggle && $sig_1
bindsym $mod+shift+F2 exec ~/.local/bin/noti_usage ram
bindsym $mod+shift+Print exec ~/.local/bin/wl-shot -re
bindsym $mod+shift+delete exec $term -T htop -a floattop -e htop
bindsym $mod+shift+e exec $gfm
bindsym $mod+shift+w exec $wallpaper
bindsym $mod+t exec ~/.local/bin/noti_date
bindsym $mod+tab exec $winmenu
bindsym $mod+v exec $editor
bindsym $mod+w exec $browser
# Kill focused window
bindsym $mod+q kill

# Hide/restart waybar
bindsym $mod+b exec ~/.config/sway/waybar.sh toggle

# When the modifier key is held down, you may hold left click to move windows, and right click to resize them
floating_modifier $mod normal

# Reload the configuration file
bindsym $mod+ctrl+r reload

# Move your focus with $mod + Vim keys
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
# With $mod+arrows
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move the focused window
bindsym $mod+shift+$left move left
bindsym $mod+shift+$down move down
bindsym $mod+shift+$up move up
bindsym $mod+shift+$right move right
# Same with arrow keys
bindsym $mod+shift+Left move left
bindsym $mod+shift+Down move down
bindsym $mod+shift+Up move up
bindsym $mod+shift+Right move right

# Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 [urgent=latest] focus
# Move focused container to workspace
bindsym $mod+shift+1 move container to workspace number 1
bindsym $mod+shift+2 move container to workspace number 2
bindsym $mod+shift+3 move container to workspace number 3
bindsym $mod+shift+4 move container to workspace number 4
bindsym $mod+shift+5 move container to workspace number 5
bindsym $mod+shift+6 move container to workspace number 6
bindsym $mod+shift+7 move container to workspace number 7
bindsym $mod+shift+8 move container to workspace number 8
bindsym $mod+shift+9 move container to workspace number 9

# Toggle between horizontal and vertical splits
bindsym $mod+period split toggle

# Toggle the current container between split and tabbed layout
bindsym $mod+g layout toggle split tabbed

# Make the current focus fullscreen
bindsym $mod+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+space floating toggle
bindsym --whole-window $mod+button8 floating toggle

# Show floating window in all workspaces
bindsym $mod+y sticky toggle

# Quick Mark'n'Swap container
bindsym $mod+z mark swap, focus left, swap container with mark swap

# Move focus to the parent container
bindsym $mod+a focus parent
bindsym $mod+shift+a focus child

# Scratchpads
bindsym $mod+shift+minus move scratchpad
bindsym $mod+minus scratchpad show
bindsym $mod+shift+x exec pgrep -f '^foot -a scpterm' >/dev/null 2>&1 || foot -T Scratchpad  -a scpterm
bindsym $mod+x [app_id="scpterm"] scratchpad show
bindsym $mod+c [app_id="vesktop|discord"] scratchpad show

# Resizing containers
bindsym $mod+ctrl+Right resize shrink width 10 px
bindsym $mod+ctrl+Up resize grow height 10 px
bindsym $mod+ctrl+Down resize shrink height 10 px
bindsym $mod+ctrl+Left resize grow width 10 px
# Same but vim keys
bindsym $mod+ctrl+l resize shrink width 10 px
bindsym $mod+ctrl+k resize grow height 10 px
bindsym $mod+ctrl+j resize shrink height 10 px
bindsym $mod+ctrl+h resize grow width 10 px

# Media keys
bindsym XF86AudioRaiseVolume exec ~/.config/sway/scripts/volume.sh up
bindsym XF86AudioLowerVolume exec ~/.config/sway/scripts/volume.sh down
bindsym ctrl+shift+Up exec ~/.config/sway/scripts/volume.sh up
bindsym ctrl+shift+Down exec ~/.config/sway/scripts/volume.sh down
bindsym XF86AudioMute exec ~/.config/sway/scripts/volume.sh mute
bindsym XF86AudioMicMute exec ~/.config/sway/scripts/mic-toggle.sh
bindsym XF86Calculator exec galculator
bindsym XF86AudioPlay exec ~/.config/sway/scripts/mediactrl.sh --play
bindsym XF86AudioStop exec ~/.config/sway/scripts/mediactrl.sh --stop
bindsym XF86AudioNext exec ~/.config/sway/scripts/mediactrl.sh --nxt
bindsym XF86AudioPrev exec ~/.config/sway/scripts/mediactrl.sh --prv
bindsym $mod+ctrl+m exec ~/.config/sway/scripts/mediactrl.sh --noti

# Brightness ctrl
bindsym XF86MonBrightnessUp exec  ~/.config/sway/scripts/brightness.sh up"
bindsym XF86MonBrightnessDown exec ~/.config/sway/scripts/brightness.sh down"

#-----------------------------------------------------#
#                      MODES                          #
#-----------------------------------------------------#

# Power
mode $mode_power {
  bindsym s exec systemctl poweroff,         mode default
  bindsym e exec $bye,                       mode default
  bindsym l exec $locker,                    mode default
  bindsym r exec systemctl reboot,           mode default
  bindsym z exec systemctl suspend,          mode default
  bindsym return mode default
  bindsym escape mode default
}

# Aps
mode $mode_apps {
  bindsym d exec discord,                        mode default
  bindsym f exec $browser,                       mode default
  bindsym s exec steam,                          mode default
  bindsym t exec thunderbird,                    mode default
  bindsym a exec ~/.config/sway/scripts/apps.sh, mode default
  bindsym return mode default
  bindsym escape mode default
}

# Info
mode $mode_info {
  bindsym i exec ~/.local/bin/noti_sysnfo,       mode default
  bindsym c exec ~/.local/bin/noti_usage cpu,    mode default
  bindsym m exec ~/.local/bin/noti_usage ram,    mode default
  bindsym w exec ~/.local/bin/weatherfetch -n,   mode default
  bindsym return mode default
  bindsym escape mode default
}

# Notes
mode $mode_todo {
  bindsym n exec $notes,                         mode default
  bindsym t exec $todo,                          mode default
  bindsym return mode default
  bindsym escape mode default
}

# Shot
mode $mode_shot {
  bindsym f exec wl-shot -f,                     mode default
  bindsym r exec wl-shot -re,                    mode default
  bindsym d exec wl-shot -t,                     mode default
  bindsym return mode default
  bindsym escape mode default
}

# Rec
mode $mode_rec {
  bindsym f exec wl-record -f,                   mode default
  bindsym r exec wl-record -r,                   mode default
  bindsym a exec wl-record -fs,                  mode default
  bindsym s exec wl-record -k,                   mode default
  bindsym return mode default
  bindsym escape mode default
}


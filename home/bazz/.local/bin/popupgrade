#!/usr/bin/env bash

RED="\033[0;31m"
GREEN="\033[0;32m"
YELLOW="\033[1;33m"
CYAN="\033[0;36m"
RESET="\033[0m"

echo -e "${CYAN}[*] Beginning system upgrade...${RESET}"

if yay -Syu; then
  echo -e "\n${GREEN}[âœ“] Upgrade complete!${RESET}"
else
  echo -e "\n${RED}[x] Upgrade failed! Check the errors above.${RESET}"
fi

echo -e "\n${YELLOW}Press <Enter> to exit this window.${RESET}\n"
read -r _

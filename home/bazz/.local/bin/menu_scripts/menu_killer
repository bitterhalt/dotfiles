#!/usr/bin/env bash

set -e

MENU="fuzzel -d -a top --y 5  -w 50 -l 15 "

selected="$(ps -a -u $USER |
  $MENU --prompt "Kill process:" |
  awk '{print $1" "$4}')"

if [[ ! -z $selected ]]; then

  answer="$(echo -e "Yes\nNo" |
    $MENU --prompt "Kill $selected?")"

  if [[ $answer == "Yes" ]]; then
    selpid="$(awk '{print $1}' <<<$selected)"
    kill -9 $selpid
  fi
fi

exit 0

#!/usr/bin/env bash
set -e

chosen=$(cut -d ';' -f1 ~/.local/share/emoji/emoji | fuzzel -d -a top --y 4 -w 30 -l 15 -p "" --placeholder "Select emoji..." | sed "s/ .*//")

[ -z "$chosen" ] && exit

if [ -n "$1" ]; then
  wl-copy "$chosen"
else
  printf "$chosen" | wl-copy
  notify-send "$chosen Copied to clipboard!" &
fi

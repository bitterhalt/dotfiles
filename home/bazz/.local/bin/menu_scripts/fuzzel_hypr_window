#!/usr/bin/env bash

# Window switcher for Hyprland. Marks special workspaces with ⭐

reverse=0

# Parse flags
for arg in "$@"; do
  case "$arg" in
  --reverse) reverse=1 ;;
  esac
done

entries=()
ids=()

# Collect windows from Hyprland
while IFS=$'\t' read -r id class title ws_id ws_name; do
  if [[ $ws_name == special* ]]; then
    label="[⭐:$ws_name" # ⭐ = special
    sortkey=1
  else
    label="[$ws_id]" # Normal workspace label
    sortkey=0
  fi
  # Store sortable line: sortkey, id, label, description
  entries+=("$sortkey	$id	$label	$class - $title")
done < <(
  hyprctl clients -j |
    jq -r '.[] |
      [
        .address,
        .class,
        .title,
        (.workspace.id|tostring),
        (.workspace.name // "")
      ] | @tsv'
)

# Sort entries (normal first, or reverse)
if ((reverse)); then
  mapfile -t entries < <(printf '%s\n' "${entries[@]}" | sort -t $'\t' -k1,1r)
else
  mapfile -t entries < <(printf '%s\n' "${entries[@]}" | sort -t $'\t' -k1,1)
fi

labels=()

# Build fuzzel output lines
for e in "${entries[@]}"; do
  tmp="${e#*$'\t'}"
  id="${tmp%%$'\t'*}"
  tmp="${tmp#*$'\t'}"
  label="${tmp%%$'\t'*}"
  body="${tmp#*$'\t'}"
  labels+=("$label $body")
  ids+=("$id")
done

result=$(printf '%s\n' "${labels[@]}" |
  fuzzel -d -a top --y 4 -w 62 -p "" --minimal-lines --index --hide-prompt)

if [[ -n $result && $result != "-1" ]]; then
  hyprctl dispatch focuswindow address:"${ids[result]}"
fi

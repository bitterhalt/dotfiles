#!/usr/bin/env bash

set -euo pipefail

bg="${HOME}/.local/share/wall/bg"

if [ "${1:-}" ]; then
  file=$(readlink -f "${1}")

  case $(file --mime-type --brief "${file}") in
  image/*)
    cp -f "${file}" "${bg}"
    ;;
  *)
    exit 1
    ;;
  esac
fi

pidof hyprpaper && pkill hyprpaper
nohup hyprpaper >/dev/null 2>&1 &

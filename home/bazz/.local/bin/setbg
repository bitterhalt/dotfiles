#!/usr/bin/env bash

# Stolen from: https://github.com/newmanls/dotfiles/blob/master/.local/bin/setbg

set -euo pipefail

bg="${HOME}/.local/share/wall/bg"

if [ "${1:-}" ]; then
  file=$(readlink -f "${1}")

  case $(file --mime-type --brief "${file}") in
  image/*)
    cp -f "${file}" "${bg}"
    ;;
  *)
    exit 1
    ;;
  esac
fi

pkill swaybg
swaybg -m fill -i "${bg}" &

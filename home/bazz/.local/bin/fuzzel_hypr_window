#!/usr/bin/env bash

reverse=0

for arg in "$@"; do
  case "$arg" in
  --reverse) reverse=1 ;;
  esac
done

entries=()
ids=()

while IFS=$'\t' read -r id class title ws_id ws_name; do
  if [[ $ws_name == special* ]]; then
    label="⭐" # ⭐ = special workspace
    sortkey=1
    sort_ws=9999
  else
    label="[ $ws_id ] "
    sortkey=0
    sort_ws=$ws_id
  fi

  entries+=("$sortkey	$sort_ws	$id	$label	$class - $title")
done < <(
  hyprctl clients -j |
    jq -r '.[] |
      [
        .address,
        .class,
        .title,
        (.workspace.id|tostring),
        (.workspace.name // "")
      ] | @tsv'
)

if ((reverse)); then
  mapfile -t entries < <(printf '%s\n' "${entries[@]}" | sort -t $'\t' -k1,1r -k2,2n)
else
  mapfile -t entries < <(printf '%s\n' "${entries[@]}" | sort -t $'\t' -k1,1 -k2,2n)
fi

labels=()

for e in "${entries[@]}"; do
  tmp="${e#*$'\t'}"
  tmp="${tmp#*$'\t'}"
  id="${tmp%%$'\t'*}"
  tmp="${tmp#*$'\t'}"
  label="${tmp%%$'\t'*}"
  body="${tmp#*$'\t'}"
  labels+=("$label $body")
  ids+=("$id")
done

result=$(printf '%s\n' "${labels[@]}" |
  fuzzel -d \
    --border-color=A02F6FFF \
    --border-width=2 \
    -w 50 \
    --y 4 \
    --line-height 24 \
    --minimal-lines \
    --index \
    --hide-prompt)

if [[ -n $result && $result != "-1" ]]; then
  hyprctl dispatch focuswindow address:"${ids[result]}"
fi
